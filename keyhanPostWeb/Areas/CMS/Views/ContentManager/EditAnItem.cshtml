@model VmSectionListItem
@{
    ViewData["Title"] = "ویرایش آیتم های لیست";
    Layout = "~/Views/Shared/_adminPanelLayout.cshtml";
}

<div class="container p-3">
    <form role="form" asp-action="EditAnItem" asp-controller="ContentManager" asp-area="CMS" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">ویرایش اطلاعات</h3>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <input type="hidden" asp-for="ContentID" value="@Model.ContentID" />
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="hidden" asp-for="SectionID" value="@Model.SectionID" />

                @*<input type="hidden" asp-for="Id" value="@Model.Id" />*@
                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="تیتر یا عنوان مطلب ...">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label asp-for="Subtitle"></label>
                            <input asp-for="Subtitle" type="text" class="form-control" placeholder="عنوان کامل">
                            <span asp-validation-for="Subtitle" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <!-- textarea -->
                        <div class="form-group">
                            <label asp-for="Text"></label>
                            <textarea asp-for="Text" class="form-control" rows="5" placeholder="متن اصلی"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- textarea -->
                        <div class="form-group">
                            <label asp-for="Text1"></label>
                            <textarea asp-for="Text1" class="form-control" rows="5" placeholder="متن دوم"></textarea>
                            <span asp-validation-for="Text1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- textarea -->
                        <div class="form-group">
                            <label asp-for="Text2"></label>
                            <textarea asp-for="Text2" class="form-control" rows="5" placeholder="متن سوم"></textarea>
                            <span asp-validation-for="Text2" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- textarea -->
                        <div class="form-group">
                            <label asp-for="FooterText"></label>
                            <textarea asp-for="FooterText" class="form-control" rows="5" placeholder="متن سوم"></textarea>
                            <span asp-validation-for="FooterText" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="ImageFile"></label>
                            <input type="file" asp-for="ImageFile" class="form-control" accept="image/*, video/*" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="altImage"></label>
                            <input type="text" asp-for="altImage" class="form-control" placeholder="شرح تصویر" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Priority"></label>
                            <input type="number" min="1" asp-for="Priority" class="form-control" />
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <hr />
                <div class="row">
                    <div class="col-md-2  mb-1">
                        <label> لینک اول : </label>
                    </div>
                    <div class="col-md-5  mb-1">
                        <input type="text" asp-for="link1_Title" class="form-control" placeholder="عنوان لینک یا دکمه" />
                    </div>
                    <div class="col-md-5 mb-1">
                        <input type="text" asp-for="link1_Address" class="form-control" placeholder="آدرس لینک" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 mb-1">
                        <label> لینک دوم : </label>
                    </div>
                    <div class="col-md-5 mb-1">
                        <input type="text" asp-for="link2_Title" class="form-control" placeholder="عنوان لینک یا دکمه" />
                    </div>
                    <div class="col-md-5 mb-1">
                        <input type="text" asp-for="link2_Address" class="form-control" placeholder="آدرس لینک" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 mb-1">
                        <label> لینک سوم : </label>
                    </div>
                    <div class="col-md-5 mb-1">
                        <input type="text" asp-for="link3_Title" class="form-control" placeholder="عنوان لینک یا دکمه" />
                    </div>
                    <div class="col-md-5 mb-1">
                        <input type="text" asp-for="link3_Address" class="form-control" placeholder="آدرس لینک" />
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <div class="row">
                    <div class="col-md-3 col-6 p-2">
                        <button type="submit" class="btn btn-primary ml-2">ثبت اطلاعات</button>
                    </div>
                    <div class="col-md-3 col-6 p-2">
                        <button type="reset" class="btn btn-secondary">انصراف</button>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

