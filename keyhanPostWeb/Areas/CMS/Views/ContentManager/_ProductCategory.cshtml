@model List<VmProductCategory>

<table class="table table-striped projects">
    <thead>
        <tr>
            <th style="width: 1%">
                #
            </th>
            <th style="width: 20%">
                عنوان
            </th>
            <th style="width: 30%">
                شرح
            </th>
            <th>
                تعداد محصول
            </th>
            <th style="width: 8%" class="text-center">
                وضعیت
            </th>
            <th style="width: 20%">
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count > 0)
            {
                int rowcount = 1;

                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @rowcount
                        </td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>
                            @if (@item.IsProduct)
                            {<span>محصول</span> }
                            else
                            {<span>خدمات</span>}
                        </td>
                        <td>
                            @if (@item.IsActive)
                            {<span>فعال</span>}
                            else
                            {<span>غیرفعال</span>}
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-info btn-sm" href="#" data-toggle="edit" data-url="@Url.Action("UpdateCategory","ContentManager",new { Area="Admin", id=item.Id})">
                                <i class="fas fa-pencil-alt">
                                </i>
                                ویرایش
                            </a>
                            <a class="btn btn-danger btn-sm" href="#" data-toggle="delete" data-url="@Url.Action("deleteCategory","ContentManager",new { Area="Admin", id=item.Id})">
                                <i class="fas fa-trash">
                                </i>
                                حذف
                            </a>
                        </td>
                    </tr>

                    rowcount++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6">اطلاعاتی جهت نمایش وجود ندارد</td>
                </tr>
            }

        }


    </tbody>
</table>

