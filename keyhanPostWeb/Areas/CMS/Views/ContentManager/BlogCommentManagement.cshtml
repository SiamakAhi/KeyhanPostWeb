@using keyhanPostWeb.GeneralService
@model List<VmBlogComment>
@{
    ViewData["Title"] = "مدیریت دیدگاه ها";
    Layout = "~/Views/Shared/_adminPanelLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h3>مدیریت دیدگاه های ارسال شده</h3>
        <p>جهت مشاهده دیدگاه های ارسال شده، کد پست موردنظر را در کادر پایین وارد نمایید سپس دکمه بازیابی را بزنید</p>
    </div>
    <div class="col-md-8">
        <form asp-action="BlogCommentManagement" asp-controller="Contentmanager" asp-area="CMS" method="post">
            <div class="row">
                <div class="col-3">
                    <input type="number" name="BlogId" min="1" class="form-control text-center" placeholder="کد  " />
                </div>
                <div class="col-5">
                    <input type="submit" class="btn btn-block btn-primary" value="بازیابی کامنت های پست" />
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>تاریخ</th>
                        <th>ارسال کننده</th>
                        <th>متن پیام</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        int rowNo = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:40px; text-align:center;">@rowNo</td>
                                <td  style="width:90px; text-align:center;">@item.ComDate.LatinToPersian()</td>
                                <td style="width:120px; text-align:center;">@item.ComSender</td>
                                <td>@item.CommentText</td>
                                <td>
                                    <a asp-action="ApproveCom" asp-controller="ContentManager" asp-area="CMS" asp-route-ComId="@item.ComID" asp-route-BlogId="@item.BlogID" class="btn btn-primary btn-sm m-1">@(item.Approve==true ? "عدم تأیید":"تأیید")</a>
                                </td>
                            </tr>

                            rowNo++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="5">اطلاعاتی برای نمایش وجود ندارد</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

