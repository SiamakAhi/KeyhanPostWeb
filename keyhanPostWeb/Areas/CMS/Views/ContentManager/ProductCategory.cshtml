@model List<VmProductCategory>
@{
    ViewData["Title"] = "دسته بندی محصولات و خدمات";
    Layout = "~/Views/Shared/_adminPanelLayout.cshtml";
}

<div id="formPlaceHolder"></div>

<div class="row pt-3">
    <div class="col-sm-12">

        <!-- Default box -->
        <div class="card card-white">
            <div class="card-header">
                <h3 class="card-title">دسته های محصولات و خدمات</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-url="@Url.Action("AddCategory","ContentManager",new { Area="Admin"})" data-toggle="callForm" title="Add">
                        <i class="fas fa-plus text-success"></i>
                    </button>
                </div>
            </div>
            <div id="tablePlace" class="card-body p-0">
                <table class="table table-striped projects table-responsive">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                عنوان
                            </th>
                            <th style="width: 30%">
                                شرح
                            </th>
                            <th>
                                تعداد محصول
                            </th>
                            <th style="width: 8%" class="text-center">
                                وضعیت
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Count > 0)
                            {
                                int rowcount = 1;

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @rowcount
                                        </td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Description</td>
                                        <td>
                                            @if (@item.IsProduct)
                                            {<span>محصول</span> }
                                            else
                                            {<span>خدمات</span>}
                                        </td>
                                        <td>
                                            @if (@item.IsActive)
                                            {<span>فعال</span>}
                                            else
                                            {<span>غیرفعال</span>}
                                        </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-info btn-sm" href="#" data-toggle="edit" data-url="@Url.Action("UpdateCategory","ContentManager",new { Area="Admin", id=item.Id})">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                ویرایش
                                            </a>
                                            <a class="btn btn-danger btn-sm" href="/Admin/ContentManager/deleteCategory/@item.Id" data-toggle="delete">
                                                <i class="fas fa-trash">
                                                </i>
                                                حذف
                                            </a>
                                        </td>
                                    </tr>

                                    rowcount++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">اطلاعاتی جهت نمایش وجود ندارد</td>
                                </tr>
                            }

                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<script src="~/js/ProductsMethod.js"></script>