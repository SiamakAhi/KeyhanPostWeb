@model VmBlogCategories
@{
    ViewData["Title"] = "دسته بندی مطالب ";
    Layout = "~/Views/Shared/_adminPanelLayout.cshtml";
}

<div class="container p-3">
    <div class="card">
        <div class="p-4 d-flex bg-dark justify-content-between align-items-center">
            <p> دسته بندی احبار و مطالب</p>
            <a href="javascript:void(0)" class="btn btn-info text-white callform" data-url="@Url.Action("AddBlogCategory", "ContentManager", new { Area = "CMS" })">ایجاد دسته جدید</a>
        </div>
        <div class="card-body">
            <div class="table-responsive-md">
                <table class="table table-striped table-hover table-borderless">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>گروه</th>
                            <th>شــرح</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Categories.Count > 0)
                        {
                            foreach (var item in Model.Categories)
                            {
                                <tr>
                                    <td><img class="tbl-image-thumb" src="~/img/blog/@item.image" alt="@item.AltImage" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td></td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="4">اطلاعاتی برای نمایش وجود ندارد</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
