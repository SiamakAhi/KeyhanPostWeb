@using keyhanPostWeb.Areas.CMS.Dtos
@model VmSiteContent
@{
    ViewData["Title"] = "سفارش های جدید";
    var cities = ViewBag.Cities as SelectList;
}
<link rel="stylesheet" href="~/css/list.css" />

<div class="orders-container fade-in">
    <div class="orders-title">سفارشات جدید</div>

    <table class="custom-table">
        <thead>
            <tr>

                <th>ردیف</th>
                <th>کد رهگیری</th>
                <th>فرستنده</th>
                <th>گیرنده</th>
                <th>تلفن فرستنده</th>
                <th>تلفن گیرنده</th>
                <th>مبدأ</th>
                <th>مقصد</th>
                <th>نوع بسته</th>
                <th>تاریخ </th>
            </tr>
        </thead>
        <tbody>
            @{
                int rowNumber = 1;
            }
            @foreach (var order in Model.GetOrderVm)
            {
                <tr>
                    <td class="row-number">@rowNumber</td>
                    <td>@order.TrackingCode</td>
                    <td>@order.SenderName</td>
                    <td>@order.ReceiverName</td>
                    <td>@order.SenderPhone</td>
                    <td>@order.ReceiverPhone</td>
                    <td>@order.OriginCityname</td>
                    <td>@order.DestinationCityname</td>
                    <td>@order.PackageTypeName</td>
                    <td>@order.CreatedAt</td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</div>
