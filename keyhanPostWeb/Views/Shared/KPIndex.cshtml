                ["خروج از هاب به فرودگاه"] = "#4f46e5",
                ["خروج از فرودگاه"] = "#f59e0b",
                ["ورود به فرودگاه مقصد"] = "#d97706",
                ["در حال ارزیابی گمرک"] = "#84cc16",
                ["خروج از گمرک"] = "#22c55e",
                ["ورود به هاب مقصد"] = "#16a34a",
                ["در حال تحويل دادن"] = "#f97316",
                ["تحويل داده شد"] = "#10b981"
            };

    // helper: convert hex like "#RRGGBB" to "rgba(r,g,b,a)"
    string HexToRgba(string hex, double alpha = 1.0)
    {
        if (string.IsNullOrWhiteSpace(hex)) return $"rgba(107,112,128,{alpha.ToString(CultureInfo.InvariantCulture)})";
        hex = hex.TrimStart('#');
        if (hex.Length == 3)
        {
            hex = string.Concat(hex[0], hex[0], hex[1], hex[1], hex[2], hex[2]);
        }
        if (hex.Length != 6) return $"rgba(107,112,128,{alpha.ToString(CultureInfo.InvariantCulture)})";
        var r = int.Parse(hex.Substring(0, 2), NumberStyles.HexNumber);
        var g = int.Parse(hex.Substring(2, 2), NumberStyles.HexNumber);
        var b = int.Parse(hex.Substring(4, 2), NumberStyles.HexNumber);
        return $"rgba({r},{g},{b},{alpha.ToString(CultureInfo.InvariantCulture)})";
    }

    bool hasHistory = Model?.WaybillHistory != null;
}
