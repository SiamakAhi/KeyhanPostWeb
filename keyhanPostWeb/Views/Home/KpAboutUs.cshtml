@{
    Layout = "_Layout";
}

    <!-- Hero Section -->

<section class="relative py-20 gradient-bg  text-white overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-20 h-20 border-2 border-white rounded-full"></div>
        <div class="absolute top-32 right-20 w-16 h-16 border-2 border-white rounded-full"></div>
        <div class="absolute bottom-20 left-32 w-12 h-12 border-2 border-white rounded-full"></div>
        <div class="absolute bottom-10 right-10 w-24 h-24 border-2 border-white rounded-full"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">درباره کیهان پست</h1>
            <p class="text-xl mb-8 opacity-90 leading-relaxed">تاریخچه، مأموریت و ارزش‌های ما</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button onclick="scrollToSection('our-story')" class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold hover:bg-gray-100 transition-all">
                    داستان ما
                </button>
          
            </div>
        </div>
    </div>
</section>

    <!-- Our Story Section -->
    <section id="our-story" class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">تاریخچه کیهان پست</h2>
                    <p class="text-lg text-gray-600 max-w-3xl mx-auto">از یک آژانس بار هوایی تا شبکه جامع لجستیک کشور</p>
                </div>

                <!-- Timeline -->
                <div class="relative max-w-2xl mx-auto">
                    <!-- Timeline Line -->
                    <div class="absolute right-8 top-0 bottom-0 w-0.5 bg-blue-200"></div>

                    <!-- Timeline Items -->
                    <div class="space-y-12">
                        <!-- 2004 - Founding -->
                        <div class="timeline-item relative pr-12">
                            <div class="bg-white card-shadow rounded-2xl p-8 hover-scale">
                                <div class="flex items-start">
                                    <div class="ml-6 mt-1">
                                        <h3 class="text-2xl font-bold text-blue-600 mb-3">تأسیس شرکت</h3>
                                        <p class="text-gray-600 text-lg mb-4">سال 1383 در اهواز</p>
                                        <p class="text-gray-700 leading-relaxed">
                                            شرکت پیام کیهان پارس با مجوز سازمان بین‌المللی هوانوردی کشوری فعالیت خود را با محوریت خدمات بار هوایی آغاز کرد.
                                            خدمات اولیه به صورت فرودگاه به فرودگاه و سپس با افزودن سرویس جمع‌آوری و توزیع، سرویس درب به درب راه‌اندازی شد.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 2008 - Expansion -->
                        <div class="timeline-item relative pr-12">
                            <div class="bg-white card-shadow rounded-2xl p-8 hover-scale">
                                <div class="flex items-start">
                                    <div class="ml-6 mt-1">
                                        <h3 class="text-2xl font-bold text-blue-600 mb-3">توسعه خدمات</h3>
                                        <p class="text-gray-600 text-lg mb-4">سال 1387</p>
                                        <p class="text-gray-700 leading-relaxed">
                                            شرکت با اخذ استاک ایرلاین‌های داخلی و خارجی، خدمات ارسال بار مسافر (فریت) و صادرات نمونه‌های تجاری را توسعه داد.
                                            همچنین خدمات بسته‌بندی حرفه‌ای و پوشش بیمه به مجموعه اضافه شد.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 2012 - Digital -->
                        <div class="timeline-item relative pr-12">
                            <div class="bg-white card-shadow rounded-2xl p-8 hover-scale">
                                <div class="flex items-start">
                                    <div class="ml-6 mt-1">
                                        <h3 class="text-2xl font-bold text-blue-600 mb-3">راه‌اندازی کیهان پست</h3>
                                        <p class="text-gray-600 text-lg mb-4">سال 1401</p>
                                        <p class="text-gray-700 leading-relaxed">
                                            پس از دو دهه تجربه موفق، برند جدید «کیهان پست» با هویت تجاری نوین متولد شد.
                                            در این مرحله ناوگان حمل و نقل زمینی اختصاصی به خدمات شرکت اضافه گردید.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 2023 - Present -->
                        <div class="timeline-item relative pr-12">
                            <div class="bg-white card-shadow rounded-2xl p-8 hover-scale">
                                <div class="flex items-start">
                                    <div class="ml-6 mt-1">
                                        <h3 class="text-2xl font-bold text-blue-600 mb-3">شبکه ملی</h3>
                                        <p class="text-gray-600 text-lg mb-4">امروز</p>
                                        <p class="text-gray-700 leading-relaxed">
                                            کیهان پست با بیش از 50 نمایندگی در سراسر ایران، خدمات لجستیک هوایی و زمینی را ارائه می‌دهد.
                                            ما آماده‌ایم تا با افتتاح نمایندگی‌های بین‌المللی، کیفیت و سرعت خدمات خود را ارتقا دهیم.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission & Vision Section -->
    <section class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="max-w-5xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">ماموریت و چشم‌انداز</h2>
                    <p class="text-lg text-gray-600">ارزش‌های بنیادین کیهان پست</p>
                </div>

                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Mission -->
                    <div class="bg-white rounded-2xl p-8 card-shadow hover-scale">
                        <div class="text-center mb-6">
                            <div class="bg-blue-100 text-blue-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-bullseye text-2xl"></i>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-800 mb-4">ماموریت ما</h3>
                        </div>
                        <div class="space-y-4">
                            <p class="text-gray-700 leading-relaxed">
                                ارائه خدمات تخصصی حمل و نقل هوایی و زمینی با بالاترین استانداردهای کیفیت و امنیت
                            </p>
                            <p class="text-gray-700 leading-relaxed">
                                تکمیل زنجیره ارزش از مبدا تا مقصد با خدمات درب به درب
                            </p>
                            <p class="text-gray-700 leading-relaxed">
                                توسعه صادرات غیرنفتی از طریق تسهیل حمل بارهای تجاری
                            </p>
                        </div>
                    </div>

                    <!-- Vision -->
                    <div class="bg-white rounded-2xl p-8 card-shadow hover-scale">
                        <div class="text-center mb-6">
                            <div class="bg-green-100 text-green-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-eye text-2xl"></i>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-800 mb-4">چشم‌انداز ما</h3>
                        </div>
                        <div class="space-y-4">
                            <p class="text-gray-700 leading-relaxed">
                                تبدیل شدن به برترين ارائه‌دهنده خدمات لجستيكي در منطقه
                            </p>
                            <p class="text-gray-700 leading-relaxed">
                                توسعه شبکه بین‌المللی نمایندگی‌ها در کشورهای همسایه
                            </p>
                            <p class="text-gray-700 leading-relaxed">
                                پیشرو در حمل و نقل هوایی مواد غذایی و کالاهای خاص
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">خدمات تخصصی کیهان پست</h2>
                <p class="text-lg text-gray-600">راهکارهای جامع لجستیک برای نیازهای متنوع</p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <!-- Service 1 -->
                <div class="bg-gray-50 rounded-2xl p-8 card-shadow hover-scale">
                    <div class="text-blue-600 mb-4">
                        <i class="fas fa-plane-departure text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">حمل هوایی بار</h3>
                    <p class="text-gray-700 leading-relaxed">
                        خدمات تخصصی حمل بار هوایی داخلی و بین‌المللی با بهترین ایرلاین‌ها
                        شامل حمل فریت مسافری، محموله‌های تجاری و نمونه‌های بازرگانی
                    </p>
                </div>

                <!-- Service 2 -->
                <div class="bg-gray-50 rounded-2xl p-8 card-shadow hover-scale">
                    <div class="text-green-600 mb-4">
                        <i class="fas fa-truck text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">حمل زمینی</h3>
                    <p class="text-gray-700 leading-relaxed">
                        شبکه گسترده حمل زمینی به تمام نقاط کشور
                        ویژه شهرهای فاقد فرودگاه با ناوگان اختصاصی و شرکای معتبر
                    </p>
                </div>

                <!-- Service 3 -->
                <div class="bg-gray-50 rounded-2xl p-8 card-shadow hover-scale">
                    <div class="text-purple-600 mb-4">
                        <i class="fas fa-box-open text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">بسته‌بندی و بیمه</h3>
                    <p class="text-gray-700 leading-relaxed">
                        خدمات تخصصی بسته‌بندی مطابق با استانداردهای بین‌المللی
                        همراه با پوشش بیمه جامع برای انواع محموله‌ها
                    </p>
                </div>

                <!-- Service 4 -->
                <div class="bg-gray-50 rounded-2xl p-8 card-shadow hover-scale">
                    <div class="text-yellow-600 mb-4">
                        <i class="fas fa-passport text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">خدمات مسافری</h3>
                    <p class="text-gray-700 leading-relaxed">
                        صدور بلیط پروازهای داخلی و خارجی
                        ارائه مشاوره تخصصی برای سفرهای تجاری و توریستی
                    </p>
                </div>

                <!-- Service 5 -->
                <div class="bg-gray-50 rounded-2xl p-8 card-shadow hover-scale">
                    <div class="text-red-600 mb-4">
                        <i class="fas fa-warehouse text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">لجستیک صادراتی</h3>
                    <p class="text-gray-700 leading-relaxed">
                        تخصص در حمل مواد غذایی تازه و محصولات کشاورزی
                        همراه با خدمات گمرکی و ترخیص کالا
                    </p>
                </div>

                <!-- Service 6 -->
                <div class="bg-gray-50 rounded-2xl p-8 card-shadow hover-scale">
                    <div class="text-indigo-600 mb-4">
                        <i class="fas fa-map-marked-alt text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">خدمات درب به درب</h3>
                    <p class="text-gray-700 leading-relaxed">
                        دریافت و تحویل مرسولات در محل مورد نظر مشتری
                        پوشش کامل از مبدا تا مقصد با سیستم رهگیری لحظه‌ای
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Network Section -->
    <section class="py-20 bg-blue-600 text-white">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold mb-6">شبکه نمایندگی‌های کیهان پست</h2>
                <p class="text-xl mb-8 opacity-90 leading-relaxed">با بیش از 50 نمایندگی در سراسر ایران</p>

                <div class="grid md:grid-cols-3 gap-8 mt-12">
                    <div class="bg-white bg-opacity-10 p-6 rounded-xl">
                        <div class="text-4xl font-bold mb-2">50+</div>
                        <div class="text-lg">نمایندگی فعال</div>
                    </div>
                    <div class="bg-white bg-opacity-10 p-6 rounded-xl">
                        <div class="text-4xl font-bold mb-2">31</div>
                        <div class="text-lg">استان تحت پوشش</div>
                    </div>
                    <div class="bg-white bg-opacity-10 p-6 rounded-xl">
                        <div class="text-4xl font-bold mb-2">20+</div>
                        <div class="text-lg">سال تجربه</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">ارزش‌های کیهان پست</h2>
                <p class="text-lg text-gray-600">اصولی که بر اساس آن فعالیت می‌کنیم</p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-gray-50 p-6 rounded-xl text-center">
                    <div class="bg-blue-100 text-blue-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">اعتبار و امانت‌داری</h3>
                    <p class="text-gray-600 text-sm">حفظ امانت مشتریان به عنوان اصلی‌ترین ارزش</p>
                </div>

                <div class="bg-gray-50 p-6 rounded-xl text-center">
                    <div class="bg-green-100 text-green-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">تعهد به زمان</h3>
                    <p class="text-gray-600 text-sm">تحویل به موقع بار با برنامه‌ریزی دقیق</p>
                </div>

                <div class="bg-gray-50 p-6 rounded-xl text-center">
                    <div class="bg-purple-100 text-purple-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">نوآوری مستمر</h3>
                    <p class="text-gray-600 text-sm">بهبود مداوم فرآیندها با فناوری روز</p>
                </div>

                <div class="bg-gray-50 p-6 rounded-xl text-center">
                    <div class="bg-yellow-100 text-yellow-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-hand-holding-heart"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">رضایت مشتری</h3>
                    <p class="text-gray-600 text-sm">اولویت دادن به نیازهای مشتریان در تمام مراحل</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-blue-700 to-blue-900 text-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-2xl md:text-3xl font-bold mb-6">همین امروز با متخصصان لجستیک ما تماس بگیرید</h2>
            <p class="text-lg mb-8 max-w-2xl mx-auto">برای دریافت مشاوره رایگان و استعلام قیمت خدمات</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a asp-controller="Home" asp-action="KpCallUs"
               class="bg-white text-blue-800 px-8 py-3 rounded-lg font-bold hover:bg-gray-100 transition-colors">
                تماس با ما
            </a>

            <a asp-controller="Home" asp-action="KpOurService" class="border-2 border-white px-8 py-3 rounded-lg font-bold hover:bg-white hover:text-blue-800 transition-colors">
                    مشاهده خدمات
                </a>
            </div>
        </div>
    </section>

    <script>
        // Simple JavaScript for interactive elements
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to cards
            const cards = document.querySelectorAll('.hover-scale');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transition = 'transform 0.3s ease';
                });
            });
        });
    </script>
