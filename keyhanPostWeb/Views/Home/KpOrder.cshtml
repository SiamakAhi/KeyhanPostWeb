@using keyhanPostWeb.GeneralViewModels.Order
@model OrderCreateViewModel
@{
    ViewData["Title"] = "ثبت سفارش جدید";
    Layout = "_Layout";
}


  
<!-- Hero Section -->
<section class="relative py-20 gradient-bg text-white overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-20 h-20 border-2 border-white rounded-full"></div>
        <div class="absolute top-32 right-20 w-16 h-16 border-2 border-white rounded-full"></div>
        <div class="absolute bottom-20 left-32 w-12 h-12 border-2 border-white rounded-full"></div>
        <div class="absolute bottom-10 right-10 w-24 h-24 border-2 border-white rounded-full"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">ثبت سفارش آنلاین</h1>
            <p class="text-xl mb-8 opacity-90 leading-relaxed">در کمتر از 5 دقیقه، مرسوله خود را ثبت کنید</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-controller="Orders" asp-action="KpCreateOrder" asp-area=""
                   class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold hover:bg-gray-100 transition-all flex items-center">
                    <i class="fas fa-plus-circle ml-3 text-2xl"></i>
                    شروع ثبت سفارش
                </a>

                <button onclick="scrollToSection('guide')" class="border-2 border-white text-white px-8 py-4 rounded-xl font-bold hover:bg-white hover:text-blue-600 transition-all">
                    راهنمای ثبت سفارش
                </button>
            </div>
        </div>
    </div>
</section>
    <!-- Order Modal -->
    <div id="orderModal" class="modal">
        <div class="modal-content">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-3xl font-bold text-gray-800">ثبت سفارش جدید</h2>
                <button onclick="closeModal()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>

            <!-- Progress Bar -->
            <div class="progress-bar mb-8">
                <div class="progress" id="progressBar"></div>
            </div>

            <!-- Step Indicators -->
            <div class="flex justify-between mb-8">
                <div class="text-center">
                    <div class="step-indicator" id="step1Indicator">1</div>
                    <div class="step-title" id="step1Title">نوع بسته</div>
                </div>
                <div class="text-center">
                    <div class="step-indicator" id="step2Indicator">2</div>
                    <div class="step-title" id="step2Title">اطلاعات مرسوله</div>
                </div>
                <div class="text-center">
                    <div class="step-indicator" id="step3Indicator">3</div>
                    <div class="step-title" id="step3Title"> اطلاعات فرستنده و گیرنده</div>
                </div>
                
                <div class="text-center">
                    <div class="step-indicator" id="step4Indicator">4</div>
                    <div class="step-title" id="step4Title">خلاصه و پرداخت</div>
                </div>
            </div>

            <!-- Form Steps -->
        <form id="orderForm">

            <!-- Step 1: Package Type -->
            <div class="form-step active" id="step1">
                <h3 class="text-xl font-bold text-gray-800 mb-4">نوع بسته خود را انتخاب کنید</h3>
                <div class="grid md:grid-cols-3 gap-4 mb-6">

                    <!-- Regular Package -->
                    <label class="bg-white rounded-lg p-4 card-shadow package-type-card cursor-pointer block" onclick="selectPackageType(this)">
                        <input type="radio" name="packageType" value="regular" class="hidden">
                        <div class="card-icon bg-blue-100 text-blue-600">
                            <i class="fas fa-box text-xl"></i>
                        </div>
                        <h4 class="text-base font-bold text-center text-gray-800 mb-2">کالای عادی</h4>
                        <p class="text-gray-600 text-center text-xs mb-3">برای کالاهای غیرحساس و با بسته‌بندی مناسب</p>
                    </label>

                    <!-- Electronic Package -->
                    <label class="bg-white rounded-lg p-4 card-shadow package-type-card cursor-pointer block" onclick="selectPackageType(this)">
                        <input type="radio" name="packageType" value="electronic" class="hidden">
                        <div class="card-icon bg-green-100 text-green-600">
                            <i class="fas fa-laptop text-xl"></i>
                        </div>
                        <h4 class="text-base font-bold text-center text-gray-800 mb-2">کالای الکترونیکی</h4>
                        <p class="text-gray-600 text-center text-xs mb-3">برای دستگاه‌های الکترونیکی و حساس</p>
                    </label>

                    <!-- Envelope -->
                    <label class="bg-white rounded-lg p-4 card-shadow package-type-card cursor-pointer block" onclick="selectPackageType(this)">
                        <input type="radio" name="packageType" value="envelope" class="hidden">
                        <div class="card-icon bg-purple-100 text-purple-600">
                            <i class="fas fa-envelope text-xl"></i>
                        </div>
                        <h4 class="text-base font-bold text-center text-gray-800 mb-2">پاکت</h4>
                        <p class="text-gray-600 text-center text-xs mb-3">برای اسناد و مدارک مهم</p>
                    </label>
                </div>

                <!-- Perishable Package -->
                <label class="bg-white rounded-lg p-4 card-shadow package-type-card cursor-pointer block" onclick="selectPackageType(this)">
                    <input type="radio" name="packageType" value="perishable" class="hidden">
                    <div class="card-icon bg-yellow-100 text-yellow-600">
                        <i class="fas fa-apple-alt text-xl"></i>
                    </div>
                    <h4 class="text-base font-bold text-center text-gray-800 mb-2">کالای فاسد شدنی</h4>
                    <p class="text-gray-600 text-center text-xs mb-3">برای مواد غذایی و کالاهای حساس به دما</p>
                </label>

                <div class="flex justify-end">
                    <button type="button" onclick="nextStep()" id="nextBtn1"
                            class="bg-blue-600 text-white px-5 py-2 text-sm rounded-lg font-medium hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                            disabled>
                        ادامه
                        <i class="fas fa-arrow-left mr-1"></i>
                    </button>
                </div>
            </div>
       


            <!-- Step 2: Package Details -->
            <div class="form-step" id="step2">
                <h3 class="text-xl font-bold text-gray-800 mb-4">اطلاعات مرسوله</h3>
                <div class="grid md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">مبدا</label>
                        <select id="origin"
                                class="w-full p-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-transparent"
                                required>
                            <option value="">انتخاب کنید</option>
                            <option>تهران</option>
                            <option>اصفهان</option>
                            <option>شیراز</option>
                            <option>مشهد</option>
                            <option>اهواز</option>
                            <option>تبریز</option>
                            <option>کرمانشاه</option>
                            <option>رشت</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">مقصد</label>
                        <select id="destination"
                                class="w-full p-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-transparent"
                                required>
                            <option value="">انتخاب کنید</option>
                            <option>تهران</option>
                            <option>اصفهان</option>
                            <option>شیراز</option>
                            <option>مشهد</option>
                            <option>اهواز</option>
                            <option>تبریز</option>
                            <option>کرمانشاه</option>
                            <option>رشت</option>
                        </select>
                    </div>
                </div>

                <div class="grid md:grid-cols-4 gap-3 mb-4">
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">طول (سانتی‌متر)</label>
                        <input type="number" id="length" placeholder="20" min="1"
                               class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">عرض (سانتی‌متر)</label>
                        <input type="number" id="width" placeholder="15" min="1"
                               class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">ارتفاع (سانتی‌متر)</label>
                        <input type="number" id="height" placeholder="10" min="1"
                               class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">وزن واقعی (کیلوگرم)</label>
                        <input type="number" id="actual-weight" placeholder="1.5" step="0.1" min="0.1"
                               class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                    </div>
                </div>

                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
                    <h4 class="font-semibold text-blue-800 mb-2 text-sm">نکات مهم برای بسته‌بندی:</h4>
                    <ul class="text-xs text-blue-700 space-y-1">
                        <li class="flex items-start">
                            <i class="fas fa-info-circle text-blue-500 ml-1 mt-0.5"></i>
                            <span>ابعاد واقعی بسته را با دقت وارد کنید</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-info-circle text-blue-500 ml-1 mt-0.5"></i>
                            <span>وزن واقعی شامل وزن کالا و بسته‌بندی است</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-info-circle text-blue-500 ml-1 mt-0.5"></i>
                            <span>برای کالاهای الکترونیکی از بسته‌بندی ضد ضربه استفاده کنید</span>
                        </li>
                    </ul>
                </div>

                <div class="flex justify-between">
                    <button type="button" onclick="prevStep()"
                            class="bg-gray-500 text-white px-5 py-2 text-sm rounded-lg hover:bg-gray-600">
                        <i class="fas fa-arrow-right ml-1"></i>
                        قبلی
                    </button>
                    <button type="button" onclick="nextStep()"
                            class="bg-blue-600 text-white px-5 py-2 text-sm rounded-lg hover:bg-blue-700">
                        ادامه
                        <i class="fas fa-arrow-left mr-1"></i>
                    </button>
                </div>
            </div>
            <!-- Step 3: Sender & Receiver Information -->
            <div class="form-step" id="step3">
                <h3 class="text-xl font-bold text-gray-800 mb-4">اطلاعات فرستنده و گیرنده</h3>

                <!-- Sender Info -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                    <h4 class="font-semibold text-blue-800 mb-3 text-base">اطلاعات فرستنده</h4>
                    <div class="grid md:grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-1">نام و نام خانوادگی</label>
                            <input type="text" id="sender-name" placeholder="مثال: علی محمدی"
                                   class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-1">شماره تماس</label>
                            <input type="tel" id="sender-phone" placeholder="09123456789"
                                   class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-1">کد ملی</label>
                            <input type="text" id="sender-national-id" placeholder="مثال: 0012345678"
                                   class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" maxlength="10" required>
                        </div>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">آدرس کامل</label>
                        <textarea id="sender-address" rows="2"
                                  class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required></textarea>
                    </div>
                </div>

                <!-- Receiver Info -->
                <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                    <h4 class="font-semibold text-green-800 mb-3 text-base">اطلاعات گیرنده</h4>
                    <div class="grid md:grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-1">نام و نام خانوادگی</label>
                            <input type="text" id="receiver-name" placeholder="مثال: محمد رضایی"
                                   class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-1">شماره تماس</label>
                            <input type="tel" id="receiver-phone" placeholder="09123456789"
                                   class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-1">کد ملی</label>
                            <input type="text" id="receiver-national-id" placeholder="مثال: 0012345678"
                                   class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" maxlength="10" required>
                        </div>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-1">آدرس کامل</label>
                        <textarea id="receiver-address" rows="2"
                                  class="w-full p-2 border rounded-lg text-sm focus:ring-1 focus:ring-blue-500" required></textarea>
                    </div>
                </div>

                <div class="flex justify-between">
                    <button type="button" onclick="prevStep()"
                            class="bg-gray-500 text-white px-5 py-2 text-sm rounded-lg hover:bg-gray-600">
                        <i class="fas fa-arrow-right ml-1"></i>
                        قبلی
                    </button>
                    <button type="button" onclick="nextStep()"
                            class="bg-blue-600 text-white px-5 py-2 text-sm rounded-lg hover:bg-blue-700">
                        ادامه
                        <i class="fas fa-arrow-left mr-1"></i>
                    </button>
                </div>
            </div>

            <!-- Step 4: Summary and Payment -->
            <div class="form-step" id="step4">
                <h3 class="text-xl font-bold text-gray-800 mb-4">خلاصه سفارش </h3>

                <!-- Order Summary -->
                <div class="bg-white border border-gray-200 rounded-lg p-4 mb-4">
                    <h4 class="font-semibold text-gray-800 mb-2 text-sm">جزئیات مرسوله</h4>
                    <div class="grid md:grid-cols-2 gap-4 text-sm">
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">نوع بسته:</span>
                                <span class="font-medium" id="summary-package-type">-</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">مبدا:</span>
                                <span class="font-medium" id="summary-origin">-</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">مقصد:</span>
                                <span class="font-medium" id="summary-destination">-</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">ابعاد:</span>
                                <span class="font-medium" id="summary-dimensions">-</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">وزن:</span>
                                <span class="font-medium" id="summary-weight">-</span>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">نوع سرویس:</span>
                                <span class="font-medium">اکسپرس</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">زمان تحویل:</span>
                                <span class="font-medium">24-72 ساعت</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">بیمه:</span>
                                <span class="font-medium">فعال</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-600">کد رهگیری:</span>
                                <span class="font-medium">IR-2024-<span id="tracking-code">XXXXXX</span></span>
                            </div>
                          
                        </div>
                    </div>
                </div>

                <!-- Sender Info -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4 text-sm">
                    <h4 class="font-semibold text-blue-800 mb-2 text-sm">فرستنده</h4>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-blue-700">نام و نام خانوادگی:</span>
                                <span class="font-medium" id="summary-sender-name">-</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-blue-700">شماره تماس:</span>
                                <span class="font-medium" id="summary-sender-phone">-</span>
                            </div>
                        </div>
                        <div>
                            <div class="text-xs text-blue-700 mb-1" id="summary-sender-address">آدرس فرستنده</div>
                        </div>
                    </div>
                </div>

                <!-- Receiver Info -->
                <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4 text-sm">
                    <h4 class="font-semibold text-green-800 mb-2 text-sm">گیرنده</h4>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-green-700">نام و نام خانوادگی:</span>
                                <span class="font-medium" id="summary-receiver-name">-</span>
                            </div>
                            <div class="flex justify-between mb-1">
                                <span class="text-green-700">شماره تماس:</span>
                                <span class="font-medium" id="summary-receiver-phone">-</span>
                            </div>
                        </div>
                        <div>
                            <div class="text-xs text-green-700 mb-1" id="summary-receiver-address">آدرس گیرنده</div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-between">
                    <button type="button" onclick="prevStep()"
                            class="bg-gray-500 text-white px-5 py-2 text-sm rounded-lg hover:bg-gray-600">
                        <i class="fas fa-arrow-right ml-1"></i>
                        قبلی
                    </button>
                    <button type="submit"
                            class="bg-gradient-to-r from-blue-600 to-green-600 text-white px-5 py-2 text-sm rounded-lg font-medium hover:shadow-md transition-all flex items-center">
                        ثبت نهایی سفارش
                        <i class="fas fa-check-circle ml-1"></i>
                    </button>
                </div>
            </div>
        </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div id="successModal" class="modal">
        <div class="modal-content text-center">
            <div class="success-animation mb-6">
                <div class="checkmark"></div>
            </div>
            <h3 class="text-3xl font-bold text-green-600 mb-4">سفارش شما با موفقیت ثبت شد!</h3>
            <p class="text-gray-700 mb-6">کارشناسان ما در اسرع وقت جهت نهایی کردن سفارش،با شما تماس خواهند گرفت.</p>

            <div class="bg-white border border-gray-200 rounded-xl p-6 mb-6">
                <div class="text-2xl font-bold text-blue-600 mb-2">IR-2024-<span id="success-tracking-code">XXXXXX</span></div>
                <div class="text-gray-600">کد رهگیری مرسوله</div>
            </div>

            <div class="grid md:grid-cols-3 gap-4 mb-8">
                <button onclick="printReceipt()" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors flex items-center justify-center">
                    <i class="fas fa-print ml-2"></i>
                    چاپ رسید
                </button>
                <button onclick="trackShipment()" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center">
                    <i class="fas fa-map-marker-alt ml-2"></i>
                    پیگیری مرسوله
                </button>
                <button onclick="shareTracking()" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors flex items-center justify-center">
                    <i class="fas fa-share-alt ml-2"></i>
                    اشتراک‌گذاری
                </button>
            </div>

            <button onclick="closeSuccessModal()" class="bg-gray-500 text-white px-8 py-3 rounded-xl font-medium hover:bg-gray-600 transition-colors">
                بستن
            </button>
        </div>
    </div>

    <!-- Guide Section -->
    <section id="guide" class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2 class="text-4xl font-bold text-gray-800 mb-6">راهنمای ثبت سفارش</h2>
                <p class="text-xl text-gray-600">مراحل ساده برای ثبت سفارش آنلاین</p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <!-- Step 1 -->
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-8 text-center hover-scale card-shadow">
                    <div class="bg-blue-600 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-plus text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">شروع ثبت سفارش</h3>
                    <p class="text-gray-700">با کلیک روی دکمه "ثبت سفارش" فرآیند را آغاز کنید و نوع بسته خود را انتخاب نمایید.</p>
                </div>

                <!-- Step 2 -->
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-8 text-center hover-scale card-shadow">
                    <div class="bg-green-600 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-info-circle text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">تکمیل اطلاعات</h3>
                    <p class="text-gray-700">اطلاعات مرسوله، فرستنده و گیرنده را به دقت وارد کنید و از صحت اطلاعات اطمینان حاصل نمایید.</p>
                </div>

