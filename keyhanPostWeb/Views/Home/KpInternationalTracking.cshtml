@{
    Layout = "_Layout";
}

<body class="font-sans text-gray-800 bg-gradient-to-br from-blue-50 to-green-50">
    

    <!-- Hero Section -->
    <section class="relative py-20 gradient-bg text-white overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-10 left-10 w-20 h-20 border-2 border-white rounded-full"></div>
            <div class="absolute top-32 right-20 w-16 h-16 border-2 border-white rounded-full"></div>
            <div class="absolute bottom-20 left-32 w-12 h-12 border-2 border-white rounded-full"></div>
            <div class="absolute bottom-10 right-10 w-24 h-24 border-2 border-white rounded-full"></div>
        </div>
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">پیگیری بین‌المللی</h1>
                <p class="text-xl mb-8 opacity-90 leading-relaxed">پیگیری مرسولات خود در تمام شبکه‌های بین‌المللی </p>
                
                <!-- Search Bar -->
                
                
                <div class="flex flex-wrap justify-center gap-4 text-sm opacity-90">
                    <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">تحویل سریع</span>
                    <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">پیگیری آنلاین</span>
                    <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">بیمه رایگان</span>
                    <span class="bg-white bg-opacity-20 px-4 py-2 rounded-full">پشتیبانی 24/7</span>
                </div>
            </div>
        </div>
    </section>

    <!-- International Tracking Services -->
