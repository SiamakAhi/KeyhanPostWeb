@using keyhanPostWeb.GeneralService
@using keyhanPostWeb.GeneralViewModels.RepDto
@model VmRepresentativeRequest

<div class="max-w-5xl mx-auto bg-white p-8 md:p-10 rounded-xl shadow-lg space-y-10">

   
    <!-- کارت اطلاعات کلّی درخواست -->
    <div class="border rounded-xl p-6 shadow-sm bg-gray-50">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">اطلاعات درخواست</h3>

        <div class="space-y-3">

            <div class="flex justify-between text-gray-700 border-b pb-2">
                <span>شماره درخواست:</span>
                <span class="font-semibold">@Model.Details.TrackingNumber</span>
            </div>

            <div class="flex justify-between text-gray-700 border-b pb-2">
                <span>تاریخ ثبت:</span>
                <span>@Model.Details.RequestDate.LatinToPersian()</span>
            </div>

            <div class="flex justify-between text-gray-700">
                <span>وضعیت فعلی درخواست:</span>
                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-lg">
                    @Model.Details.RequestStatus
                </span>
            </div>

        </div>
    </div>

    <!-- اطلاعات متقاضی + اطلاعات نمایندگی -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <!-- کارت اطلاعات متقاضی -->
        <div class="border rounded-xl p-6 shadow-sm bg-gray-50">
            <h3 class="text-lg font-semibold text-gray-700 mb-4">اطلاعات متقاضی</h3>

            <ul class="space-y-2 text-gray-700">
                <li><strong>نام: </strong>@Model.Details.ApplicantName</li>
                <li><strong>نوع شخصیت: </strong>@Model.Details.EntityType</li>
                <li><strong>ایمیل: </strong>@Model.Details.Email</li>
                <li><strong>شماره همراه: </strong>@Model.Details.MobileNumber</li>
            </ul>
        </div>

        <!-- کارت اطلاعات نمایندگی -->
        <div class="border rounded-xl p-6 shadow-sm bg-gray-50">
            <h3 class="text-lg font-semibold text-gray-700 mb-4">جزئیات درخواست نمایندگی</h3>

            <ul class="space-y-2 text-gray-700">
                <li><strong>شهر فعالیت: </strong>@Model.Details.CityName</li>
                <li><strong>نوع نمایندگی: </strong>@Model.Details.AgencyType</li>
                <li><strong>وسیله نقلیه: </strong>@Model.Details.VehicleAvailability</li>
                <li><strong>وضعیت ملک: </strong>@Model.Details.PropertyType</li>
            </ul>
        </div>

    </div>

    <!-- بخش توضیحات -->
    <div>
        <label class="block text-gray-700 font-medium mb-2">سایر توضیحات</label>
        <textarea disabled rows="3"
                  class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100">
            @Model.Details.OtherDesc
        </textarea>
    </div>

